<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaproject.CartController"
            prefWidth="680" prefHeight="563">

    <Text layoutX="10" layoutY="25" text="Your Cart:" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <ListView fx:id="cartListView"
              layoutX="10" layoutY="50"
              prefWidth="660" prefHeight="450"
              styleClass="list-view" />

    <Button fx:id="saveButton"
            layoutX="10" layoutY="515"
            text="Save Cart to File"
            prefWidth="660"
            styleClass="tab-button" />

</AnchorPane>
